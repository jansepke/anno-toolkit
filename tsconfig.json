{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true, //generate type definitions to outputDir
    "declarationMap": true, //for debug reasons, link typescript files to js files
    "strict": true, //strict typescript - force to use always typesafe variables/attributes
    "forceConsistentCasingInFileNames": true, //case sensitive
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  "exclude": ["node_modules", "**/*.*spec.ts", "dist"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
}
